@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Product>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
	Layout = "masterview.cshtml";
}
<script src="~/javascripts/main.js"></script>

<div class="container">
	<div class="col-lg-12">
		<img class="col-md-6 mt-5 mb-5" src="@Model.ProductImage" alt="...">
		<h2>@Model.ProductName</h2>
		 <div style="text-align: right">
				<input class="btn-primary btn btn-sm" type="button" value="Add to cart" onclick="testSave(@Model.Id)">
			</div>
				<div class="col-sm-4" ><b>$@Model.ProductPrice</b> </div> 
				<br/>
		<div style="margin-bottom: 15px" class="col-md-8">@Model.ProductDescription</div>
	</div>	
</div>